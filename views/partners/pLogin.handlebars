<form action="/partners/login" method="post">

  <input type="hidden" name="user[type]" value="partner">

  <h3> Welcome Buzz Partner </h3>
  <label for="email">Email</label>
  <input type="email" name="partner[email]" placeholder="e.g. email@domain.com">

  <label for="password">Password</label>
  <input type="password" name="partner[password]" placeholder="Your password">

  <button type="submit" name="button">Submit</button>
</form>
